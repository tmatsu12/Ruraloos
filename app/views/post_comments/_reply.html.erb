<div class="card ml-5">
  <div class="row">
    <div class="col-md-1 m-auto">
      <%= image_tag "arrow.png", class: "ml-2", size: '40x40' %>
    </div>
    <div class="col-md-1 mx-auto mt-3">
      <%= link_to user_path(reply.user) do %>
  	    <%= attachment_image_tag reply.user, :profile_image, fallback: "no_image.png", size: "30x30" %><br>
  	    <span class="link" style="font-size:12px;"><%= reply.user_name %></span>
      <% end %>
    </div>
    <div class="col-md-7">
      <div class="card-body">
        <%= safe_join(reply.comment.split("\n"),tag(:br)) %>
      </div>
    </div>

    <div class="col-md-3 mt-4">
      <p><%= reply.updated_at.strftime("%Y/%m/%d %H:%M") %></p>
    </div>
  </div>
</div>



