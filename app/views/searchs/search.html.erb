<div class="general-visual">
  <div class="container">
    <div class="row">
      <div class="col-9 mt-5">
        <h3 class="border-bottom border-success">検索結果：<%= Prefecture.find(@prefecture_id).name %><%= @content %></h3>
        <% if @records.exists? %>
          <div class="row row-cols-3">
            <% @records.each do |post| %>
              <div class="col-4 mb-3" >
                <%= render partial: "posts/post_cards", locals: {post: post} %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>該当する投稿はありません</p>
        <% end %>
      </div>
      <div class="col-3 mt-5">
        <%= render partial: "users/sidebar" %>
      </div>
    </div>
  </div>
</div>