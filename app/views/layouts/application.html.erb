<!DOCTYPE html>
<html>
  <head>
    <title>Ruraloos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <%#= javascript_include_tag 'jquery.japan-map.min.js' %>
    <script type="text/javascript" src="https://unpkg.com/japan-map-js@1.0.1/dist/jpmap.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <main>
      <%= yield %>
      <a href="/inquiry"><i class="fas fa-comment-dots fa-3x inquiry-button"></i></a>
      <a href="/admin"><i class="fas fa-user-cog fa-2x admin-button"></i></a>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
