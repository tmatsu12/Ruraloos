<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart like-btn ml-5 mt-2" ></i><span class="text-dark"><%= post.favorites.count %>いいね</span>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart unlike-btn ml-5 mt-2" ></i><span class="text-dark"><%= post.favorites.count %>いいね</span>
  <% end %>
<% end %>