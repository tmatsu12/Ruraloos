<%= form_with model:user_prefecture, url: user_prefectures_path, local:true do |f| %>
  <div class="d-flex justify-content-start">
    <div class="form-group mt-3">
      <%= f.label :住んだことのある県 %><br>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.select :prefecture_livepast_ids, Prefecture.all.map{|pref| [pref.name, pref.id] }, {} , {multiple: true, size: 10} %>
    </div>
    <div class="form-group mt-3 ml-5">
      <%= f.label :住んでみたい県 %><br>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.select :prefecture_livefuture_ids, Prefecture.all.map{|pref| [pref.name, pref.id] }, {} , {multiple: true, size: 10} %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "更新", class: "btn btn-success btn-text rounded-pill" %>
    <%= link_to "キャンセル", user_path(current_user), class: "btn btn-secondary btn-text rounded-pill my-3 ml-3" %>
  </div>
<% end %>
