<%= form_with model:post, local:true do |f| %>

  <div class="form-group">
    <%= f.label :タイトル %><span class="text-danger">(必須)</span><br />
    <%= f.text_field :title, class: "col-9 form-control" %>
  </div>

  <div class="d-flex">
    <div class="form-group mr-5">
      <%= f.label :どの県についての質問ですか？ %><span class="text-danger">(必須)</span><br>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '選択して下さい', class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :どの辺りについての質問ですか？ %><span class="text-danger">(必須)</span><br>
      <%= f.text_field :city, class: "form-control", placeholder: "市町村名" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :質問内容 %><br />
    <%= f.text_area :body, rows: 10, class: "col-9 form-control" %>
  </div>

  <div class="actions">
    <%= f.submit '質問する',class: "btn btn-success btn-text rounded-pill my-3 mr-3" %>
  </div>

<% end %>


