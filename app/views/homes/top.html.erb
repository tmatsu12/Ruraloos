<div class="container-fluid">
  <p id="notice"><%= flash[:notice] %></p>

  <div class="row">

    <div class="main-visual">
      <div class="main-visual-content d-flex justify-content-center align-items-center flex-column">
        <h1 class="mb-0 mx-auto font-weight-bold ruraloos"><%= image_tag "favicon.ico", size: '55x55' %> Ruraloos <%= image_tag "favicon.ico", size: '55x55' %></h1>
        <p class="mt-0 mb-4 text-muted rubi" style="font-size:16px;">ルーラルーズ</p>
        <h3>地方移住に関心がある人のためのQ＆Aサイト</h3>
        <a class="btn btn-dark btn-lg rounded-pill mt-3 go-map btn-text", href="#map-container">興味のある地域を選ぶ</a>
      </div>
    </div>

  </div>

  <div class="row">

      <div class="sub-visual">
        <div class="sub-visual-content">
          <h2 class="pt-4 text-center font-weight-bold">新着の質問</h2>
          <div class="d-flex justify-content-center align-items-center mb-4">
            <%= render partial: "post", collection: @posts %>
          </div>
          <p class="text-center"><%= link_to "全ての質問を見る", all_posts_path, class: "btn btn-header btn-text", style: "font-size:18px;" %></p>
        </div>
      </div>

  </div>



  <div class="row map-visual d-flex justify-content-center align-items-center">

    <div class="ml-5 mr-0 py-5">
      <div id="map-container"></div>
    </div>
    <% temp_ids = UserPrefecture.where(status: "livefuture").group(:prefecture_id).order('count(prefecture_id) desc').limit(3).pluck(:prefecture_id) %>
    <div class="mt-5 mr-5">
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th><h5>住みたい県ランキング！</h5></th>
          </tr>
        </thead>
        <tbody>
          <% temp_ids.each_with_index do |temp_id, i| %>
          <tr>
            <% case i %>
            <% when 0 %>
              <td class="ranking" style="font-size:24px;"><span class="text-danger font-weight-bold"><%= "第#{i+1}位" %></span></td>
              <td class="ranking" style="font-size:24px;">
                <%= link_to posts_path(prefecture_id: Prefecture.find(temp_id).id) do %>
                  <span class="link"><%= Prefecture.find(temp_id).name %></span>
                  <span class="link ml-3"><%= UserPrefecture.where(status: "livefuture").where(prefecture_id: temp_id).count %>人</span>
                <% end %>
              </td>
            <% when 1 %>
              <td class="ranking" style="font-size:20px;"><%= "第#{i+1}位" %></td>
              <td class="ranking" style="font-size:20px;">
                <%= link_to posts_path(prefecture_id: Prefecture.find(temp_id).id) do %>
                  <span class="link"><%= Prefecture.find(temp_id).name %></span>
                  <span class="link ml-3"><%= UserPrefecture.where(status: "livefuture").where(prefecture_id: temp_id).count %>人</span>
                <% end %>
              </td>
            <% else %>
              <td class="ranking" style="font-size:18px;"><%= "第#{i+1}位" %></td>
              <td class="ranking" style="font-size:18px;">
                <%= link_to posts_path(prefecture_id: Prefecture.find(temp_id).id) do %>
                  <span class="link"><%= Prefecture.find(temp_id).name %></span>
                  <span class="link ml-3"><%= UserPrefecture.where(status: "livefuture").where(prefecture_id: temp_id).count %>人</span>
                <% end %>
              </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>

</div>


<script>
  $(function(){
    $(".go-map").on("click", function() {
      $("html,body").animate({scrollTop:$('#map-container').offset().top},'slow');
      return false;
  });
  });
</script>

