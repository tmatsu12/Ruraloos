<div class="card ml-5">
  <div class="row">
    <div class="col-md-1 m-auto">
      <%= image_tag "arrow.png", size: '40x40' %>
    </div>
    <div class="col-md-2 mx-auto mt-3">
      <%= link_to user_path(reply.user) do %>
  	    <%= attachment_image_tag reply.user, :profile_image, fallback: "no_image.png", size: "30x30" %><br>
  	    <%= reply.user.name %>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <%= reply.comment %>
      </div>
    </div>
    <div class="col-md-3 mt-4">
      <p><%= reply.created_at.strftime("%Y/%m/%d %H:%M") %></p>
    </div>
  </div>
</div>
