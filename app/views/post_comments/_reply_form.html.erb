<div class="ml-5 mb-3">
    <%= form_with(model: [@post, @post_comment]) do |f| %>
      <%= f.hidden_field :parent_id %>
      <div class="form-group">
        <h5 class="mt-2">返信</h5>
        <%= f.text_area :comment, rows: 4, class: 'form-control', placeholder: "返信をここに" %>
      </div>
      <%= f.submit '送信', class: 'btn btn-primary btn-text rounded-pill' %>
      <%= link_to 'キャンセル', post_path(@post), class: 'btn btn-secondary btn-text rounded-pill' %>
    <% end %>
</div>
