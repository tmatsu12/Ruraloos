<div class="general-visual">
  <div class="container">
    <div class="row">
      <div class="col-9 mt-5">
        <h1 class="border-bottom">回答の編集</h1>
        <%= form_with(model:[@post, @post_comment], local: true) do |f| %>
          <div class="form-group">
            <%= f.label :回答内容 %><span class="text-danger">(必須)</span><br />
            <%= f.text_area :comment, rows: 10, class: "col-9 form-control" %>
          </div>
          <div class="actions">
            <%= f.submit '更新する',class: "btn btn-success btn-text rounded-pill my-3 mr-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


